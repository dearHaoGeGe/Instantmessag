<?xml version="1.0" encoding="utf-8"?><!-- android:duration="@android:integer/config_mediumAnimTime" -->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false">
    <scale
        android:duration="600"
        android:fromXScale="0.0"
        android:fromYScale="0.0"
        android:interpolator="@android:res/anim/accelerate_decelerate_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="0"
        android:startOffset="20"
        android:toXScale="1.0"
        android:toYScale="1.0"></scale>
    <rotate
        android:duration="600"
        android:fromDegrees="0"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="+355" />

    <!-- 右往左推出效果 -->
    <!-- my_alpha_action和scale_rotate一组 -->
    <!--overridePendingTransition(R.anim.scale_rotate,R.anim.my_alpha_action);-->
</set>
