<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_send_chat_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/message_send_chat_details_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/chat_details_item_text_size"
            android:background="@drawable/a7q"
            android:text="@string/send_message"/>

        <ImageView
            android:id="@+id/head_img_send_chat_details_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/kong_jian_margin_dimen"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_get_chat_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/head_image_get_chat_details_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/kong_jian_margin_dimen"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/message_get_chat_details_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/chat_details_item_text_size"
            android:background="@drawable/am"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/get_message"/>

    </LinearLayout>

</LinearLayout>
